<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name ="PersonImages">
        <item name="android:layout_width">137dp</item>
        <item name="android:layout_height">133dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="PersonNames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PersonCV">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
